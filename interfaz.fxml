<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500" prefWidth="800" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
   <children>
       <VBox alignment="TOP_CENTER" layoutX="200" layoutY="30" prefWidth="400" spacing="20">
          <children>
              <!-- Logos -->
              <HBox alignment="CENTER" spacing="10">
                 <children>
                     <ImageView fx:id="logoUTEZ" fitHeight="60" fitWidth="120" />
                     <ImageView fx:id="logo25" fitHeight="60" fitWidth="120" />
                 </children>
              </HBox>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Utez25.png" />
               </image>
            </ImageView>
      
              <!-- Subtítulo -->
              <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Inicio de sesión de administrador" />
      
              <!-- Formulario -->
              <VBox alignment="CENTER" spacing="10">
         <children>
                     <TextField fx:id="emailField" maxWidth="250" promptText="Email" />
                     <PasswordField fx:id="passwordField" maxWidth="250" promptText="Contraseña" />
                     <Hyperlink fx:id="forgotPasswordLink" text="¿Olvidaste tu contraseña?" />
                     <Button fx:id="loginButton" style="-fx-background-color: #2c2c78; -fx-text-fill: white;" text="Iniciar sesión" />
                     <Hyperlink fx:id="registerLink" text="Regístrate" />
         </children>
              </VBox>
          </children>
       </VBox>
   </children>
</AnchorPane>
