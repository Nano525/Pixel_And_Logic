<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.resources.pixelsandlogic.HelloController" style="-fx-background-color: white;">
    <children>
        <VBox alignment="CENTER" maxWidth="450" spacing="15.0" style="-fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10;">
            <children>
                <ImageView fitHeight="177.0" fitWidth="452.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../images/Captura%20de%20pantalla%202025-06-09%20083339.png" />
                    </image>
                </ImageView>
                <Label style="-fx-font-size: 16px;" text="Ingresa tu usuario" />
                <TextField fx:id="emailField" maxWidth="350" promptText="Email" />
                <PasswordField fx:id="passwordField" maxWidth="350" promptText="Contraseña" />
                <Hyperlink fx:id="forgotPasswordLink" text="¿Olvidaste tu contraseña?" />
                <Button fx:id="loginButton" maxWidth="250" style="-fx-background-color: #23245C; -fx-text-fill: white; -fx-font-size: 16px;" text="Iniciar sesión" onAction="#onLoginButtonClick" />
                <VBox alignment="CENTER">
                    <children>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Administrador" />
                        <Hyperlink fx:id="registerLink" text="Registrate" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>
        </VBox>
    </children>
</StackPane>
